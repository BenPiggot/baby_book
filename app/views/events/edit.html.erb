<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 class="text-center">Edit Event</h2>

    <%= bootstrap_form_for [@baby, @event] do |f| %>
      <%= f.date_field :date, :placeholder =>"Enter a date (ex. March 30, 2015)" %>
      <%= f.text_field :topic, :placeholder => "Enter a topic" %>
      <%= f.text_area :body, :placeholder => "Enter the details" %>
      <%= f.submit "Create Event", :class => "btn btn-info" %>
    <% end %>
  </div>
</div>
