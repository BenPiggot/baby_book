<h1>Photos from <%= @event.topic%></h1>

<% @media.each do |photo| %>
<div class="imgWrapper">
  <%= cl_image_tag(photo.url,
      :width => 100,
      :height => 80,
      :crop => :fill,
      :gravity => :face
        ) %>
<% @media.each do |idx| %>
 <p class="imgDescription"><%= link_to "Delete Photo?", baby_event_medium_path(@baby,@event,idx.id), :method => :delete %></p>

<% end %>
</div>
<% end %>

