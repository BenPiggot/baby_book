
<div class="container col-md-6 col-md-offset-3">

<h1 class="text-center">Login</h1>

<%= bootstrap_form_for :user do |f| %>
  <%= f.text_field :email, placeholder: "Enter your email", icon: "user" %>
  <%= f.text_field :password, placeholder: "Enter your password", type: "password", icon: "lock" %>
  <%= f.submit "Login", class: "btn btn-info" %>
  <div>
    <a class="btn btn-primary btn-md fa fa-facebook-official" href="/auth/facebook"> Facebook Sign In</a>
  </div>
<% end %>

</div>