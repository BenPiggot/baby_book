<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel"><%= "#{@baby.name}'s Measurements" %></h4>
</div>
<div class="modal-body">
    <div class="table-responsive">
      <table class="table baby-all">
        <thead>
          <tr>
            <th>Date</th>
            <th>Weight (kg)</th>
            <th>Height (cm)</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <% @stats.each do |stat| %>
        <tbody>
          <tr>
          <% if stat.date %>
            <td><strong><%= stat.date.strftime("%m/%d/%Y") %></strong></td>
            <td><%= stat.weight %></td>
            <td><%= stat.height %></td>
            <td><%= link_to "", edit_baby_stat_path(@baby, stat.id), :class => "btn btn-default btn-xs glyphicon glyphicon-pencil modal-glyphs" %></td>
            <td><%= link_to "", baby_stat_path(@baby, stat.id), :class => "btn btn-default btn-xs glyphicon glyphicon-trash modal-glyphs", :method => :delete %></td>
          <% end %>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>