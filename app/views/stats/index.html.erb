<div class="row">
  <div class="col-md-8 col-offset-md-2">

  <h2><%= "#{@baby.name}'s" %> Progress</h2>

<h3>Last Three Growth Measurments</h3>
<% @last_three.each do |last| %>
<div class="baby-stats">
  <p><strong><%= last.date.strftime("%A %B %e, %Y") %></strong></p>
  <p><%= last.weight %> kg</p>
  <p><%= last.height %> cm</p>
</div>
<% end %>
<br>



<!-- Button trigger modal -->
<%= link_to 'Create an Update'.html_safe, new_baby_stat_path, :class=>'btn btn-success btn-margins', :data=>{toggle:'modal',target:'#myModal'} %>
<!-- Button trigger stat-history modal -->
<button type="button" class="btn btn-primary btn-margins" data-toggle="modal" data-target="#statModal">
  See All Measurments
</button>

<%= link_to "#{@baby.name}'s Profile", baby_path(@baby), :class => "btn btn-info btn-margins" %>



  </div>
</div>


<h2>Baby Data WOW</h2>
<% @data.each do |x|  %>
<%= x[:"5th_percentile_length_in_centimeters"] %>
<% end %>

<% @data1.each do |x|  %>
<%= x[:"5th_percentile_length_in_centimeters"] %>
<% end %>


<% @data2.each do |x|  %>
<%= x[:"3rd_percentile_weight_in_kilograms"] %>
<% end %>

<% @data3.each do |x|  %>
<%= x[:"3rd_percentile_weight_in_kilograms"] %>
<% end %>

<!-- New Stat Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    </div>
  </div>
</div>

<!-- Stat History Modal -->
<div class="modal fade" id="statModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= "#{@baby.name}'s Measurements" %></h4>
      </div>
      <div class="modal-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Weight</th>
                  <th>Height</th>
                </tr>
              </thead>
              <% @stats.each do |stat| %>
              <tbody>
                <td><strong><%= stat.date.strftime("%B %e, %Y") %></strong></td>
                <td><%= stat.weight %> kg</td>
                <td><%= stat.height %> cm</td>
              </tbody>
              <% end %>
            </table>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
