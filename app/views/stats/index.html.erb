<meta name = "viewport" content = "initial-scale = 1, user-scalable = no">
<div class="col-md-8">

  <h2><%= "#{@baby.name}'s" %> Progress</h2>

  <h4>Most Recent Growth Measurments</h4>

  <div class="baby-stats">
    <div class="table-responsive">
      <table class="table table-condensed baby-recent">
        <thead>
          <tr>
            <th>Date</th>
            <th>Weight</th>
            <th>Height</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'stats' %>
        </tbody>
      </table>
    </div>
  </div>



  <!-- Button trigger modal -->
  <%= link_to 'Create an Update', new_baby_stat_path, :class=>'btn btn-success btn-margins-stats', :data=>{toggle:'modal',target:'#myModal'} %>

  <!-- Button trigger stat-history modal -->
  <%= link_to 'See All Measurements', baby_stat_modal_path, :class => 'btn btn-primary btn-margins-stats', :data=>{toggle: 'modal', target: '#myModal' }  %>

  <!-- Button to baby's timeline page -->
  <%= link_to "#{@baby.name}'s Timeline", baby_events_path, :class => 'btn btn-info btn-margins-stats' %>


  <!-- <div style="block"> -->
<div>
<select id="stat-charts" class="btn btn-default">
  <option value="">Compare Height or Weight</option>
  <option value="height">Height</option>
  <option value="weight">Weight</option>
</select>
</div>

<hr>

</div>

<!-- canvas for stats graphs-->
  <div class="col-md-8" style="width: 98%">
    <h3 id="chart-header"></h3>
    <div id="canvas-container">
      <canvas id="canvas"></canvas>
    </div>
  </div>


<!-- Calling data for js -->
<%= content_tag :div, class: "stat_information", data: {temp: @stats} do %>
<% end %>
<%= content_tag :div, class: "baby_information", data: {temp: @baby} do %>
<% end %>

<!-- New Stat Modal -->
<div class="modal fade bs-modal-sm" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
    </div>
  </div>
</div>
