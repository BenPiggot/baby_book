<div class="row">
  <div class="col-md-8 col-offset-md-2">

  <h2>Measure your baby!</h2>

  <%= bootstrap_form_for [@baby, @stat] do |f| %>
    <%= f.text_field :height, :placeholder =>"Enter your baby's height (cm)" %>
    <%= f.text_field :weight, :placeholder => "Enter your baby's weight (kg)" %>
    <%= f.text_field :date, :placeholder => "Date Recorded (ex. March 22, 2014)" %>
    <%= f.submit "Update", :class => "btn btn-info" %>
  <% end %>

  </div>
</div>