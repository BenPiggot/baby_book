<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel"><%= @baby.name %></h4>
</div>
<div class="modal-body text-center">
  <p><strong>Born on:<br>
  </strong><%= @birthday %></p>
  <% @last_stat.each do |stat| %>
  <% if stat.date %>
      <p>As of <strong><%= stat.date.strftime("%B %e, %Y") %></strong>,<br>
      I am <%= stat.weight %>kg, <%= stat.height %>cm</p>
  <% end %>
  <% end %>
  <%= cl_image_tag( @baby.profile_pic,
    :class => "modal-profile-img",
    :height => 300,
    :width => 290,
    :gravity => "face",
    :crop => "fill",
    :radius => "max"
  ) %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <%= link_to "Measurements", baby_stats_path(@baby), :id=>"Measurements-btn" :class => "btn btn-info"%>
  <%= link_to "Timeline", baby_events_path(@baby), :class => "btn btn-info" %>
  <%= link_to "Edit", edit_baby_path(@baby), :class => "btn btn-info" %>
</div>