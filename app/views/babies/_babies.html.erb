<% @babies.each do |baby| %>

  <% @birthday = baby.birthday.strftime("%A, %B %e, %Y") %>
  <% @last_stat = baby.stats.order(date: 'desc').limit(1) %>

  <div class="my-babies">
  <h2 class="baby-name"><%= baby.name %></h2>
  <div class="float-right"><%= link_to "", edit_baby_path(baby), :class => "fa fa-gears edit-link", :data => {toggle: 'modal', target: '#editModal'} %></div>
  <hr>
  <% if baby.profile_pic == nil %>

  <div class="add-profile">
    <h3 class="add">Add a photo for <%= baby.name %></h3>
  </div>

  <% else %>
    <%= cl_image_tag( baby.profile_pic,
      :class => "baby-profile",
      :height => 220,
      :width => 220,
      :gravity => "face",
      :crop => "fill",
      :radius => "max"
    ) %>

<hr>
  <div class="baby-info">
  <p><strong>Born on:<br>
    </strong><%= @birthday %></p>
   </div>
<hr>
<% end %>
<!--   </div> -->
  <div class="horizontal-class">
      <li><%= link_to "Timeline", baby_events_path(baby), :class => "btn btn-info btn-sm" %></li>
      <li><%= link_to "Measurements", baby_stats_path(baby), :class => "btn btn-info btn-sm"%></li>
</div>
</div>
<% end %>